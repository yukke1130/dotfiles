######################################################################## alias
alias where="command -v"
alias j="jobs -l"
case "${OSTYPE}" in
  freebsd*|darwin*)
  alias ls="ls -G -w"
  ;;
  linux*)
  alias ls="ls --color"
  ;;
esac
alias v="vim"
alias vi="vim"
alias la="ls -a"
alias lf="ls -F"
alias ll="ls -l"
alias du="du -h"
alias df="df -h"
alias su="su -l"

